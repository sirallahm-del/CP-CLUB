#include <stdio.h>
 
int main() {
    int q;
    scanf("%d", &q);
 
    while (q--){
        int n;
        scanf("%d",&n);
 
        char s[25],t[25];
        scanf("%s%s",s,t);
 
        int cnt[26]={0};
 
        
        for (int i = 0; i < n; i++) {
            cnt[s[i] - 'a']++;
        }
 
        
        for (int i=0;i<n;i++) {
            cnt[t[i]-'a']--;
        }
 
        int ok=1;
        for (int i=0;i<26;i++) {
            if (cnt[i]!=0) {
                ok=0;
                break;
            }
        }
 
        if (ok)
            printf("YES\n");
        else
            printf("NO\n");
    }
 
    return 0;
}
