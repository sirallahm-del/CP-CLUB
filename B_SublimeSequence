#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);  

    while (t--) {
        int x, n;
        scanf("%d %d", &x, &n);  

        int sum;
        if (n % 2 == 0) {
            sum = 0;   
        } else {
            sum = x;  
        }

        printf("%d\n", sum);  
    }

    return 0;
}
